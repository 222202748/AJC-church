# Database Configuration
# Use 127.0.0.1 instead of localhost to avoid IPv6 issues
MONGODB_URI=mongodb://127.0.0.1:27017/church_donations
# For production, use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/church_donations

# MongoDB Connection Options
MONGODB_RETRY_ATTEMPTS=5
MONGODB_RETRY_DELAY=2000
MONGODB_RECONNECT_INTERVAL=1000

# Server Configuration
PORT=5000
NODE_ENV=production
FRONTEND_URL=https://your-church-website.com
BACKEND_URL=https://api.your-church-website.com

# Email Configuration (Gmail)
EMAIL_USER=church.email@gmail.com
EMAIL_PASS=your-app-password
# Note: Use App Password for Gmail, not regular password

# JWT Configuration
JWT_SECRET=your-strong-jwt-secret-key-for-production
JWT_EXPIRATION=7d

# Church Information
CHURCH_EMAIL=church.email@gmail.com
CHURCH_NAME=Mani Church

# Razorpay Configuration
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# Paytm Configuration
PAYTM_MID=your_paytm_mid
PAYTM_KEY=your_paytm_key
PAYTM_WEBSITE=WEBSTAGING
PAYTM_URL=https://securegw-stage.paytm.in/theia/processTransaction
# For production: https://securegw.paytm.in/theia/processTransaction

# JWT Secret for Admin Authentication
JWT_SECRET=your_super_secret_jwt_key_here

# File Upload Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Church Information (for receipts)
CHURCH_NAME=Your Church Name
CHURCH_ADDRESS=Your Church Address
CHURCH_PHONE=Your Church Phone
CHURCH_EMAIL=your-church@email.com
CHURCH_REGISTRATION_NUMBER=Your Registration Number

# Bank Details (for manual transfers)
BANK_ACCOUNT_NAME=Church Ministry Fund
BANK_ACCOUNT_NUMBER=1234567890123456
BANK_IFSC_CODE=SBIN0001234
BANK_NAME=State Bank of India
BANK_BRANCH=Main Branch
UPI_ID=churchministry@sbi